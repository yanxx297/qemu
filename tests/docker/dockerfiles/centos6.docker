FROM centos:6
RUN yum install -y epel-release centos-release-xen
ENV PACKAGES \
    bison \
    ccache \
    flex \
    g++ \
    gcc \
    git \
    glib2-devel \
    libfdt-devel \
    make \
    pixman-devel \
    SDL-devel \
    tar \
    xen-devel \
    zlib-devel
RUN yum install -y $PACKAGES
RUN rpm -q $PACKAGES | sort > /packages.txt
